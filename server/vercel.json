{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "controllers/**/*.js",
          "middleware/**/*.js",
          "routes/**/*.js",
          "models/**/*.js",
          "services/**/*.js",
          "utils/**/*.js",
          "configs/**/*.js"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "server.js"
    }
  ]
}